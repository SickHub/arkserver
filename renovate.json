{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "circleci": {
    "enabled": false
  },
  "dockerfile": {
    "enabled": false
  },
  "regexManagers": [
    {
      "fileMatch": [
        "^.circleci/config.yml$",
        "^Dockerfile$"
      ],
      "matchStrings": [
        "\\sdefault: (?<currentValue>.*) # (?<datasource>.*?):(?<depName>.*?)",
        "# (?<datasource>.*?):(?<depName>.*?)\\sARG .*?_VERSION=(?<currentValue>.*)"
      ],
      "versioningTemplate": "semver"
    }
  ],
  "packageRules": [
    {
      "matchPackageNames": ["arkmanager/ark-server-tools"],
      "matchManagers": ["regex"],
      "enabled": true
    }
  ]
}
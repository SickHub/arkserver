{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "enabledManagers": [
    "regex"
  ],
  "regexManagers": [
    {
      "fileMatch": [
        "^.circleci/config.yml$"
      ],
      "matchStrings": [
        "default: (?<currentValue>.*) # (?<datasource>[a-z-]*?)/(?<depName>.*?)"
      ],
      "autoReplaceStringTemplate": "default: {{{newValue}}} # {{{datasource}}}/{{{depName}}}",
      "versioningTemplate": "semver"
    }
  ]
}
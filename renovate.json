{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "enabledManagers": ["regex"],
  "regexManagers": [
    {
      "fileMatch": [
        "^.circleci/config.yml$"
      ],
      "matchStrings": [
        "default: (?<currentValue>.*) # (?<datasource>.*?):(?<depName>.*?)"
      ],
      "autoReplaceStringTemplate": "default: {{{newValue}}} # {{{datasource}}}:{{{depName}}}",
      "versioningTemplate": "semver"
    }
  ],
  "packageRules": [
    {
      "matchPackageNames": ["arkmanager/ark-server-tools"],
      "matchManagers": ["regex"],
      "enabled": true
    }
  ]
}